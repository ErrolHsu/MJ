<div class="mt">
	<%= form_tag(upload_score_path, method: "post") do %>
		<div><%= radio_button_tag :result, "win", true %> 贏錢! 	</div>
		<div class="mt"><%= radio_button_tag :result, "lose" %> 輸錢 </div>
		<div class="mt">
			<%= label_tag :score %>
			<%= number_field_tag(:score, nil, class: "form-control") %>
		</div>	
		<%= submit_tag("送出", class: "btn btn-1 mt") %>
	<% end %>
</div>

<hr>